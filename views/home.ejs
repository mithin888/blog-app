<%- include("partials/header"); -%>



  <div class="container">
    <h1>Home</h1>
    <p>
      <%= homeContent %>
    </p>

    <% postContent.forEach(post=> { %>
      <h1>
        <%= post.title %>
      </h1>
      <p>
        <% if (post.post.length> 100) { %>
          <%= `${post.post.substring(0, 100)}... ` %>
            <a href=<%=`/posts/${_.kebabCase(post.title)}` %> >Read More</a>
            <% } else { %>
              <%= post.post %>
      </p>
      <% }}) %>
  </div>


  <%- include("partials/footer"); -%>